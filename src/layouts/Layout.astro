---
export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<link rel="stylesheet" href="/styles/style.scss">
		<title>{title}</title>
	</head>
	<body>
		<slot />
		<footer>
			<p>Copyright 2022</p>
		</footer>
	</body>
</html>
